[Unit]
Description=Run Mocha Selenium Tests every 15 minutes
Requires=mocha-selenium-tests.service

[Timer]
# Run 2 minutes after boot
OnBootSec=2min

# Run every 15 minutes after last activation
OnUnitActiveSec=15min

# Allow some timing variance for system load
AccuracySec=1min

# Persist timer state across reboots
Persistent=true

[Install]
WantedBy=timers.target
